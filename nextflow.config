//
// Notes to End Users.
//
// The workflow should run without editing this configuration file,
// however there may be instances in which you wish to edit this
// file for compute performance or other reasons. Please see:
//
//   https://nextflow.io/docs/latest/config.html#configuration
//
// for further help editing this file.

params {
    help = false
    version = false
    ubam = null
    fastq = null
    ref = null
    cutter = null
    out_dir = 'output'
    chunk_size = -1
    sample_id = null
    vcf = null
    pairs = false
    mcool = false
    mcool_resolutions = '1000,2000,5000N' // 4DN tuple default
    coverage = false

    //TODO add to schema
    minimap2_settings = '-x map-ont'

    threads = 4
    ubam_map_threads = 2 // 12
    digest_annotate_threads = 1 //2
    ubam_bam2fq_threads = 1 // 1

    aws_image_prefix = null
    aws_queue = null
    disable_ping = false

    process_label = 'wfporec'
    analyse_unclassified = false
    monochrome_logs = false
    validate_params = true
    show_hidden_params = false
    schema_ignore_params = 'show_hidden_params,validate_params,monochrome_logs,aws_queue,aws_image_prefix,wf'
    chromunity = false
    chromunity_merge_distance = null
    cool_bin_size = 1000
    paired_end = false
    filter_pairs = false
    paired_end_minimum_distance = null
    paired_end_maximum_distance = null
    sample_sheet = null
    params_sheet = null

    wf {
        name = 'wf-pore-c'
        example_cmd = [
            '--fastq test_data/porec_test.concatemers.fastq --ref test_data/porec_test.fasta --phased_vcf test_data/porec_test.phased_variants.vcf.gz --mcool_resolutions 1000,2000,3000 --cutter NlaIII --vcf test_data/porec_test.phased_variants.vcf.gz --pairs --chromunity --paired_end --filter_pairs --paired_end_minimum_distance 100 --paired_end_maximum_distance 200 --chromunity --chromunity_merge_distance 5 --mcool'
        ]
        container_sha = 'shaf398a84ba0723c0e612e43926145008535c345c9'
        agent = null
    }
}

manifest {
    name            = 'epi2me-labs/wf-pore-c'
    author          = 'Oxford Nanopore Technologies'
    homePage        = 'https://github.com/epi2me-labs/wf-pore-c'
    description     = 'workflow for analysing pore-c data.'
    mainScript      = 'main.nf'
    nextflowVersion = '>=21.05.0'
    version         = 'v0.0.7'
}

executor {
    $local {
        cpus = 4
        memory = "8 GB"
    }
}

epi2melabs {
  tags = "pore-c,contact,map,chromatin,conformation,capture"
}

// used by default for "standard" (docker) and singularity profiles,
// other profiles may override.
process {
    withLabel:wfporec {
        container = "ontresearch/wf-pore-c:${params.wf.container_sha}"
    }
    shell = ['/bin/bash', '-euo', 'pipefail']
    withName: "merge_coordsorted_bams|merge_namesorted_bams" {
        cpus= 4
        publishDir = [
            path: { "${params.out_dir}/bams/" },
            mode: "copy",
            pattern: '*.{bam,csi,bai}'
        ]
    }
    withName: "merge_pairs|merge_pairs_stats|merge_mcools|create_restriction_bed|pair_stats_report" {
        publishDir = [
            path: { "${params.out_dir}/pairs/" },
            mode: "copy",
            pattern: '*.{gz,stats.txt,bed,mcool,html}'
        ]
    }
    withName: "mosdepth_coverage" {
        publishDir = [
            path: { "${params.out_dir}/coverage/" },
            mode: "copy",
            pattern: '*.*'
        ]
    }
    withName: "merge_parquets_to_dataset" {
        publishDir = [
            path: { "${params.out_dir}/chromunity/" },
            mode: "copy",
            pattern: '*.*'
        ]
    }
    withName: "merge_paired_end_bams" {
        publishDir = [
            path: { "${params.out_dir}/paired_end/" },
            mode: "copy",
            pattern: '*.{bam,csi,bai}'
        ]
    }
    withName: "makeReport" {
        publishDir = [
            path: { "${params.out_dir}/" },
            mode: "copy",
            pattern: '*.{html}'
        ]
    }
}


profiles {
    // the "standard" profile is used implicitely by nextflow
    // if no other profile is given on the CLI
    standard {
        docker {
            enabled = true
            // this ensures container is run as host user and group, but
            //    also adds host user to the within-container group
            runOptions = "--user \$(id -u):\$(id -g) --group-add 100"
        }
    }

    // using singularity instead of docker
    singularity {
        singularity {
            enabled = true
            autoMounts = true
        }
    }


    // keep stub conda profile to prevent unknown profile warning so users get a better error
    conda {
        conda.enabled = true
    }

    // Using AWS batch.
    // May need to set aws.region and aws.batch.cliPath
    awsbatch {
        process {
            executor = 'awsbatch'
            queue = "${params.aws_queue}"
            memory = '8G'
            withLabel:wfporec {
                container = "${params.aws_image_prefix}-wf-pore-c:${params.wf.container_sha}-root"
            }
            shell = ['/bin/bash', '-euo', 'pipefail']
        }
    }

    // local profile for simplified development testing
    local {
        process.executor = 'local'
    }
}


timeline {
  enabled = true
  overwrite = true
  file = "${params.out_dir}/execution/timeline.html"
}
report {
  enabled = true
  overwrite = true
  file = "${params.out_dir}/execution/report.html"
}
trace {
  enabled = true
  overwrite = true
  file = "${params.out_dir}/execution/trace.txt"
}

env {
    PYTHONNOUSERSITE = 1
}
